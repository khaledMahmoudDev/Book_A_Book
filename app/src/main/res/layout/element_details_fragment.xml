<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="bookDetailViewModel"
            type="com.example.bookabook.ui.elementDetails.ElementDetailsViewModel" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        tools:context=".ui.elementDetails.ElementDetailsFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/backGroundOff"
                app:expandedTitleMarginBottom="32dp"
                app:expandedTitleMarginEnd="64dp"
                app:expandedTitleMarginStart="48dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    app:imageString="@{bookDetailViewModel.receivedBook.bookThumbnail}"
                    android:id="@+id/bookeDetailImage"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    tools:src="@tools:sample/avatars" />
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    app:hideIfFalse="@{bookDetailViewModel.sameUser}"
                    android:id="@+id/imageView5"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="@dimen/margin_large"
                    app:layout_constraintEnd_toStartOf="@+id/toggleButton"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_baseline_edit_24" />

                <ToggleButton
                    android:onClick="@{()->bookDetailViewModel.addToFav()}"
                    android:checked="@={bookDetailViewModel.isBookFav}"
                    android:id="@+id/toggleButton"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="@dimen/margin_large"
                    android:background="@drawable/like_selector"
                    android:textOff=""
                    android:textOn=""
                    app:layout_constraintEnd_toStartOf="@+id/imageView6"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/imageView5"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/toggleButton"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_baseline_share_24" />


                <TextView
                    style="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/textVbookDetailBookNameTextViewiew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    tools:text="Book Name"
                    android:text="@{bookDetailViewModel.receivedBook.bookTitle}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/toggleButton" />

                <TextView
                    style="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/bookDetailAuthorTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    tools:text="Book Author"
                    android:text="@{bookDetailViewModel.receivedBook.bookWriter}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textVbookDetailBookNameTextViewiew" />

                <TextView

                    style="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/bookDetailOwnerTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    tools:text="Book Owner"
                    android:text="@{bookDetailViewModel.receivedBook.bookOwnerId}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bookDetailAuthorTextView" />

                <com.google.android.material.chip.ChipGroup

                    android:id="@+id/bookDetailCategoryChipGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="@dimen/margin_normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bookDetailOwnerTextView">

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category" />
                </com.google.android.material.chip.ChipGroup>

                <TextView

                    style="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/bookDetailDetailsTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@{bookDetailViewModel.receivedBook.bookDescription}"
                    tools:text="Details Details Details Details Details Details Details Details Details Details Details Details  Details Details Details Details Details Details  Details Details Details Details Details Details  Details Details Details Details Details Details Details Details Details Details Details Details  Details Details Details Details Details Details  Details Details Details Details Details Details  Details Details Details Details Details Details  Details Details Details Details Details Details  Details Details Details Details Details Details Details Details Details Details Details Details Details Details Details Details Details Details "
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bookDetailCategoryChipGroup" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>